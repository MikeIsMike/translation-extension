{
  "name": "TranslationScatter",
  "version": "1.0",
  "description": "Translates specific words in a page",
  "permissions": ["activeTab", "declarativeContent", "storage"],
	"content_scripts": [{
		"css": ["openWindow.css"],
    "js": ["translations.js", "findAndReplaceDOMText.js", "translate.js", "openWindow.js"],
    "matches": ["<all_urls>"]
  }],
  "manifest_version": 2
}
